<div class="container">

    <div class="jumbotron">
        <img src="assets/images/burger.png" alt="burger">
        <h1>Eat-Da-Burger! </h1>
        <br>
        <form class="create-form">
        <div class="form-group"><textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
            <br>
            <label for="exampleFormControlTextarea1">To enter a burger you want to eat, click the "submit"
                button</label>
            <br>
            </form>
            <button type="submit" id="addburger">Submit</button>
        </div>
        </panel>
    </div>

    <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <strong><span>{{this.id}} - {{this.burger_name}}</strong></span>
        <button type="button" id="eatbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}">Devour it!</button>
        <hr>
        {{/unless}}
        {{/each}}
    </ul>
</div>
