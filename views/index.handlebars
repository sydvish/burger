<div class="container">

    <div class="jumbotron">
        <img src="assets/images/burger.png" alt="burger">
        <h1>Eat-Da-Burger! </h1>
        <br>
        <form class="create-form">
            <div class="form-group"><textarea class="form-control" id="addBurger" rows="3"></textarea>
                <br>
                <label for="addBurger">To enter a burger you want to eat, click the "submit"
                    button</label>
                <br>
        </form>
        <button type="submit" id="addburger">Submit</button>
    </div>
    </panel>
</div>

<ul>
    <h1>Un Eaten</h1>
    {{#each burgers}}
        {{#unless devoured}}
            <strong><span>{{this.id}} - {{this.burger_name}}</strong></span>
            <button type="button" class="eatbutton" data-id="{{this.id}}" data-newDevoured="{{devoured}}">Devour it!</button>
            <hr>
        {{/unless}}
    {{/each}}

    <h1>Devoured!</h1>
    {{#each burgers}}
        {{#if devoured}}
            <strong><span>{{this.id}} - {{this.burger_name}}</strong></span>
            <button type="button" class="delete" data-id="{{this.id}}">Delete it!</button>
            <hr>
        {{/if}}
    {{/each}}
</ul>
</div>